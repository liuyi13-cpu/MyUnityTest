<Window x:Class="CheckFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="800"
        Height="350">
    <Grid>
        <StackPanel Height="25"
                    Margin="0,50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <TextBlock Text="检查路径 :" />
            <TextBox x:Name="tbRe"
                     Width="680"
                     Margin="0,0,5,0"
                     />
            <Button Width="20"
                    Click="Path_Click"
                    Content="..."
                    Tag="2" />
        </StackPanel>
        <StackPanel Margin="0,0,0,100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button Width="75"
                    Height="50"
                    Click="Button_Click"
                    Content="检查" />
        </StackPanel>
    </Grid>
</Window>
